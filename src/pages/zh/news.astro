---
import { changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import HeaderLayout from "../../layouts/HeaderLayout.astro";
import FooterLayout from "@/layouts/FooterLayout.astro";

changeLanguage("zh");
---

<Layout title="workshop 2023 December.">
<HeaderLayout>
<FooterLayout>
	<main class="py-16 px-16 flex justify-center">
		<div class="w-2/3">
			<h1 class="font-serif font-bold text-xl m-2">Timeline</h1>
            <div class="m-0 p-0 w-[95%] align-baseline">
                <ul class="relative before:bg-black before:-ml-[1px] before:absolute before:top-0 before:left-8 before:w-[3px] before:h-full">
                    
                    <li class="relative">
                        <label class="transform rotate-45 bg-black outline-zinc-50 outline-8 block mt-2 mr-2 mb-2 -ml-2 w-4 h-4 absolute top-0 left-8"></label>
                        <div class="pt-8 pr-8 pl-8 relative -top-7 left-8 w-[95%]">
                            <p class="inline-block border-y-2 border-black font-mono text-black"> 7:00 am - 8:00 am </p>
                            <h3 class=" font-semibold text-lg "> Title </h3>
                            <div class="w-full bg-amber-300 leading-normal rounded-md opacity-80 p-6">
                                Workshop opening remarks
                            </div>
                        </div>
                    </li>

                    <li class="relative">
                        <label class="transform rotate-45 bg-black outline-zinc-50 outline-8 block mt-2 mr-2 mb-2 -ml-2 w-4 h-4 absolute top-0 left-8"></label>
                        <div class="pt-8 pr-8 pl-8 relative -top-7 left-8 w-[95%]">
                            <p class="inline-block border-y-2 border-black font-mono text-black"> 8:00 am - 9:00 am </p>
                            <h3 class=" font-semibold text-lg "> Keynote Talk - Hung-Yi Lee (Chair Paola Garcia) </h3>
                            <div class="w-full bg-amber-300 leading-normal rounded-md opacity-80 p-6">
                                "Advancing Universal Speech Models Through Self-Supervised Learning: Progress, Challenges, and Future Direction" [SLIDES] 
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
		</div>
	</main>
</FooterLayout>
</HeaderLayout>
</Layout>
