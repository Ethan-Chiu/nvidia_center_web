---
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---

<footer class="flex flex-col gap-3 bg-secondary m-0 px-2 sm:px-10 pt-10">
	<div class="flex flex-row justify-between">
		<ul
			class="grid gap-3 grid-cols-1 sm:p-6 md:w-[500px] lg:w-[700px] lg:grid-cols-2"
		>
			<li class="row-span-3">
				<a
					class="flex h-full w-full select-none flex-col justify-end rounded-md p-6 bg-popover border-2 border-primary no-underline outline-none focus:shadow-md"
					href={localizePath("/")}
				>
					<div class="mb-2 mt-4 text-lg font-medium">
						{t("footer.title")}
					</div>
					<p class="text-sm leading-tight text-muted-foreground">
						{t("footer.description")}
					</p>
				</a>
			</li>
			<a
				href={localizePath("/members")}
				class="w-full bg-popover rounded-md p-4 overflow-hidden overflow-ellipsis hidden lg:inline border-2 hover:bg-secondary border-transparent hover:border-primary transition-colors"
			>
				<p class="font-bold">{t("nav.members")}</p>
			</a>
			<a
				href={localizePath("/news")}
				class="w-full bg-popover rounded-md p-4 overflow-hidden overflow-ellipsis hidden lg:inline border-2 hover:bg-secondary border-transparent hover:border-primary transition-colors"
			>
				<p class="font-bold">{t("nav.news")}</p>
			</a>
			<a
				href={localizePath("/contact")}
				class="w-full bg-popover rounded-md p-4 overflow-hidden overflow-ellipsis hidden lg:inline border-2 hover:bg-secondary border-transparent hover:border-primary transition-colors"
			>
				<p class="font-bold">{t("nav.contact")}</p>
			</a>
		</ul>
		<div class="grow max-w-sm hidden sm:flex flex-wrap my-6">
			<div class="grow mx-4">
				<h5 class="font-bold text-2xl mb-6">{t("nav.contact")}</h5>
				<ul class="list-group">
					<li
						class="list-group-item bg-transparent border-0 p-0 mb-2"
					>
						<a href={localizePath("contact/#phone")}
							>{t("contact.content.phone")}</a
						>
					</li>
					<li
						class="list-group-item bg-transparent border-0 p-0 mb-2"
					>
						<a href={localizePath("contact/#email")}
							>{t("contact.content.email")}</a
						>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="flex text-primary justify-center">
		<p class="text-center pb-2">@2023 All rights reserved.</p>
	</div>
</footer>
