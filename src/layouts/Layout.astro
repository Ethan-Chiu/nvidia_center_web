---
import '@/styles/globals.css'
import i18next from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<HeadHrefLangs/>
		<ViewTransitions />
	</head>
	<body>
		<div class="flex flex-col bg-background min-h-screen">
			<slot />
		</div>
	</body>
</html>

<script>
	const theme = (() => {
		const localtheme = localStorage.getItem("local_theme");
		if (typeof localStorage !== "undefined" && localtheme !== null) {
			console.log("use local storage preference")
			return localtheme;
		}
		if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
			console.log("system setting dark")
			return "dark";
		}
		return "light";
	})();
  
	if (theme === "light") {
		console.log("apply light theme")
		document.documentElement.classList.remove("dark");
	} else {
		console.log("apply dark theme")
		document.documentElement.classList.add("dark");
	}
	window.localStorage.setItem("local_theme", theme);
</script>